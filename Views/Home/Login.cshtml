    <video autoplay loop muted>
        <source src="~/Content/Home/mp4/homemp4.mp4" type="video/mp4" />
    </video>
  
    <div class="container">

        <div class="card-wrap">

            <div class="card border-0 shadow card--welcome is-show" id="welcome">
                <div class="card-body">
                    <h2 class="card-title">欢迎光临</h2>
                    <p>欢迎进入登录页面</p>
                    <div class="btn-wrap"><a class="btn btn-lg btn-register js-btn" data-target="register">注册</a><a class="btn btn-lg btn-login js-btn" data-target="login">登录</a></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="card border-0 shadow card--register" id="register" >
                <div class="card-body">
                    <h2 class="card-title">管理员注册</h2>
                    @*<p class="card-text">第三方注册</p>*@
                    @*<p class="badge-wrap"><a class="badge"><i class="fab fa-facebook-f"></i></a><a class="badge"><i class="fab fa-google"></i></a><a class="badge"><i class="fab fa-twitter"></i></a><a class="badge"><i class="fab fa-github"></i></a></p>*@
                    <p>或者使用您的电子邮箱进行注册</p>
                    <form action="/Home/Register" method="post">
                        <div class="form-group">
                            <input class="form-control" name="UserName" type="text" placeholder="名称" required="required">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="Account" type="email" placeholder="邮箱" required="required">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="Possword" type="password" placeholder="密码" required="required">
                        </div>
                        @*<button type="submit" class="btn btn-lg">注册</button>*@
                        @*<button type="submit" class="btn btn-lg" style="cursor: not-allowed">注册</button>*@
                    </form>
                    <button type="submit" class="btn btn-lg" style="cursor: not-allowed">注册暂未开放</button>
                    
                </div>
                <button class="btn btn-back js-btn" data-target="welcome"><i class="fas fa-angle-left"></i></button>
            </div>

            <div class="card border-0 shadow card--login" id="login" >
                <div class="card-body">
                    <h2 class="card-title">客官 里面请~</h2>
                    <p>第三方登录</p>
                    @*<p class="badge-wrap"><a class="badge"><i class="fab fa-facebook-f"></i></a><a class="badge"><i class="fab fa-google"></i></a><a class="badge"><i class="fab fa-twitter"></i></a><a class="badge"><i class="fab fa-github"></i></a></p>*@
                    <p>或用邮箱登录</p>
                    <form method="post" action="/Home/Login">
                        <div class="form-group">
                            <input class="form-control" name="Account" type="email" placeholder="邮箱" required="required">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="Possword" type="password" placeholder="密码" required="required">
                        </div>
                        <p><a href="/home/wjpwd">忘记密码?</a></p>
                        <button type="submit" class="btn btn-lg">登录</button>
                    </form>
                </div>
                <button class="btn btn-back js-btn" data-target="welcome"><i class="fas fa-angle-left"></i></button>

            </div>
        </div>

    </div>

    <script src="~/Content/Home/js/index.js"></script>





